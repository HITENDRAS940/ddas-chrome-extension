{
  "manifest_version": 3,
  "name": "DDAS - Data Duplication Alert System",
  "version": "1.0.0",
  "description": "Detects duplicate file downloads using hash comparison with cloud storage",
  "permissions": [
    "downloads",
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "http://localhost:8081/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "DDAS - Duplicate Detection"
  }
}