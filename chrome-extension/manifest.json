{
  "manifest_version": 3,
  "name": "DDAS - Data Duplication Alert System (HTTP)",
  "version": "3.0.0",
  "description": "Detects duplicate file downloads using local HTTP server communication",
  "permissions": [
    "downloads",
    "storage",
    "scripting",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:5001/*",
    "http://localhost:5001/*", "http://localhost:5001/*", "http://localhost:8080/*"
  ],
  "background": {
    "service_worker": "background_http.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "DDAS - Duplicate Detection"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icon16.png", "icon48.png", "icon128.png"],
      "matches": ["<all_urls>"]
    }
  ]
}